{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist"
  },
  "include": [
    "index.js",
    "scripts/**/*",
    "src/**/*",
    "logic/**/*",
    "utils/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
